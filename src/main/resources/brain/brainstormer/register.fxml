<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #121212;" fx:controller="brain.brainstormer.controller.RegisterController">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 50;">
        <Label text="Register" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #E0E0E0;"/>
        <Label text="Join us and start your journey with BrainStormer!" style="-fx-font-size: 14px; -fx-text-fill: #B0B0B0;"/>

        <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-max-width: 300px;">
            <VBox spacing="5">
                <Label text="Username" style="-fx-font-size: 14px; -fx-text-fill: #B0B0B0;"/>
                <TextField fx:id="usernameField" promptText="UniqueUsername123" styleClass="text-field"/>
                <Label fx:id="usernameErrorLabel" styleClass="label-error"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #B0B0B0;"/>
                <TextField fx:id="emailField" promptText="example@gmail.com" styleClass="text-field"/>
                <Label fx:id="emailErrorLabel" styleClass="label-error"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Name" style="-fx-font-size: 14px; -fx-text-fill: #B0B0B0;"/>
                <TextField fx:id="nameField" promptText="John Doe" styleClass="text-field"/>
                <Label fx:id="nameErrorLabel" styleClass="label-error"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #B0B0B0;"/>
                <PasswordField fx:id="passwordField" promptText="Create a strong password" styleClass="text-field"/>
                <Label fx:id="passwordErrorLabel" styleClass="label-error"/>
            </VBox>
        </VBox>

        <Button fx:id="registerButton" text="Register" styleClass="button"/>
        <HBox spacing="5" alignment="CENTER">
            <Label text="Already have an account?" style="-fx-font-size: 12px; -fx-text-fill: #B0B0B0;"/>
            <Hyperlink fx:id="loginButton" text="Login" styleClass="hyperlink"/>
        </HBox>
    </VBox>
</StackPane>
