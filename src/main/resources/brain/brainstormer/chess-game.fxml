<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="brain.brainstormer.controller.ChessController">
    <!-- Title and player names at the top -->
    <top>
        <VBox alignment="CENTER" prefWidth="600">
            <Label text="Chess" style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="CENTER"/>
            <HBox alignment="CENTER" spacing="20">
                <Label fx:id="whitePlayerName" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="White Player"/>
                <Label text="vs" style="-fx-font-size: 16px;"/>
                <Label fx:id="blackPlayerName" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Black Player"/>
            </HBox>
            <Label fx:id="roomCodeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" text="Room Code: 123456" alignment="CENTER"/>
            <Label fx:id="waitingLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Waiting for another player..." alignment="CENTER"/>
        </VBox>
    </top>

    <!-- Centered chessboard -->
    <center>
        <VBox alignment="CENTER" prefWidth="600" prefHeight="600">
            <GridPane fx:id="chessBoard" alignment="CENTER" hgap="0" vgap="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                <!-- Cells will be added dynamically in the controller -->
            </GridPane>
        </VBox>
    </center>
</BorderPane>
