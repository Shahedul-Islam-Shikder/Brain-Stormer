<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="brain.brainstormer.controller.HomeController">
    <HBox spacing="0" style="-fx-pref-height: 100%; -fx-pref-width: 100%;">

        <!-- Sidebar -->
        <VBox fx:id="sidebar" prefHeight="698.0" prefWidth="300.0" style="-fx-background-color: #000000; -fx-pref-width: 300px; -fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #E0E0E0;" text="Brain-Stormer" />

            <VBox fx:id="sidebarArea" spacing="10" style="-fx-padding: 40 0;">
                <Button fx:id="templatesButton" style="-fx-background-color: transparent; -fx-text-fill: #B0B0B0; -fx-font-size: 16px; -fx-padding: 10 0; -fx-border-color: #B0B0B0; -fx-border-width: 0 0 1 0; -fx-border-style: solid; -fx-pref-width: 280px; -fx-alignment: CENTER_LEFT;" text="Templates" />
                <Button fx:id="networkButton" style="-fx-background-color: transparent; -fx-text-fill: #B0B0B0; -fx-font-size: 16px; -fx-padding: 10 0; -fx-border-color: #B0B0B0; -fx-border-width: 0 0 1 0; -fx-border-style: solid; -fx-pref-width: 280px; -fx-alignment: CENTER_LEFT;" text="Network" />
                <Button fx:id="gamesButton" style="-fx-background-color: transparent; -fx-text-fill: #B0B0B0; -fx-font-size: 16px; -fx-padding: 10 0; -fx-border-color: #B0B0B0; -fx-border-width: 0 0 1 0; -fx-border-style: solid; -fx-pref-width: 280px; -fx-alignment: CENTER_LEFT;" text="Games" />
            </VBox>

            <Region style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />

            <Button fx:id="logoutButton" prefHeight="44.0" prefWidth="260.0" style="-fx-background-color: #333333; -fx-text-fill: #E0E0E0; -fx-font-size: 14px; -fx-background-radius: 15;" text="Logout" />
        </VBox>

        <!-- Main Content -->
        <VBox alignment="TOP_CENTER" prefHeight="785.0" spacing="20" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
            <!-- Header with Greeting and Search -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #333333; -fx-padding: 10; -fx-background-radius: 10; -fx-pref-width: 100%;">
                <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #E0E0E0;" text="Hello, User" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField promptText="Search" style="-fx-pref-width: 200px; -fx-background-color: #444444; -fx-text-fill: #E0E0E0; -fx-background-radius: 10; -fx-prompt-text-fill: #777777;" />
                <Button style="-fx-background-color: #1A1A5A; -fx-text-fill: white; -fx-background-radius: 10;" text="Search" />
            </HBox>

            <HBox fx:id="templateButtonRow" prefHeight="44.0" spacing="10">
                <!-- Buttons will be dynamically added here -->
            </HBox>

            <!-- Scrollable Content Area for Templates -->
            <VBox fx:id="mainContentArea" minHeight="352.0" prefHeight="352.0" prefWidth="218.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #121212;" VBox.vgrow="ALWAYS">
                <!-- Placeholder for dynamic content -->
            </VBox>




            <!-- AnchorPane for Add Button at Bottom -->
            <AnchorPane prefHeight="100.0" style="-fx-background-color: #121212;" VBox.vgrow="NEVER">
                <children>
                    <!-- Floating Add Button at Bottom Right -->
                    <Button fx:id="addButton" layoutX="599.0" layoutY="12.0" style="-fx-font-size: 28px; -fx-background-color: #333333; -fx-text-fill: white; -fx-background-radius: 50%; -fx-pref-width: 60px; -fx-pref-height: 60px;" text="+" AnchorPane.bottomAnchor="12.0" AnchorPane.rightAnchor="12.0" />
                </children>
            </AnchorPane>
        </VBox>
    </HBox>
</StackPane>
